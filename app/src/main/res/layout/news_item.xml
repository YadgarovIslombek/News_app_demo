<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <TextView
                android:id="@+id/text_title"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="5as5d4as45asdasdas"
                android:textColor="@color/black"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/text_desc"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:maxLines="1"
                android:text="65as4d5as4d5s6a4sa6d465a4d65as4d654as56as65d465as4d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/publishedAt"
                    android:textSize="10sp"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:text="10 январь 1990"
                    android:textColor="@color/purple_500"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/time"
                    android:textSize="10sp"
                    android:layout_marginTop="6dp"
                    android:textStyle="normal"
                    android:text="10 час назад"

                    android:textColor="@color/purple_500"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/image_headline"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent">


        </ImageView>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/prograss_load_photo"
        style="@android:style/Widget.ProgressBar.Small.Inverse"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />

</androidx.cardview.widget.CardView>